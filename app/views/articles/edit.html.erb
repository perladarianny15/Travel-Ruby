<h1>Editing Article</h1>

<%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.label :title, class:"col-sm-1 col-form-label" %>
      <div class="col-sm-6">
          <%= f.text_field :title, class:"form-control", type:"text" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :string, class:"col-sm-1 col-form-label" %>
      <div class="col-sm-6">
          <%= f.text_field :string, class:"form-control", type:"text" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :text, class:"col-sm-1 col-form-label" %>
      <div class="col-sm-6">
          <%= f.text_field :text, class:"form-control", type:"text" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class:"col-sm-1 col-form-label" %>
       <div class="col-sm-6">
          <%= f.text_area :description, class:"form-control", type:"text" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
     </div>
  <% end %>
  
<%= link_to 'Show', @article, class:"btn btn-primary btn-sm" %> |
<%= link_to 'Back', articles_path,  class:"btn btn-danger btn-sm"  %>